// fnUserWorkspaces â€” thin wrapper for /users/{id}/workspaces
// Returns: table with {workspace: record, workspace_role: text}  (raw CoLabEndpoint output)
// Inherits: pagination, retry (FetchWithRetry), cycle guard from CoLabEndpoint
let
  fnUserWorkspaces = (uid as text) as table =>
    CoLabEndpoint("users/" & uid & "/workspaces", false, null, [page_size = "100"])
in
  fnUserWorkspaces
